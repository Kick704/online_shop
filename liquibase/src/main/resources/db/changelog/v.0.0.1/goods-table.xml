<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="create-table-goods" author="Kick704">
        <createTable tableName="goods" remarks="Таблица товаров интернет-магазина">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="goods_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="count" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="discount" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modified" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="goods"
                                 baseColumnNames="category_id"
                                 constraintName="FK_goods_goods_categories"
                                 referencedTableName="goods_categories"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>