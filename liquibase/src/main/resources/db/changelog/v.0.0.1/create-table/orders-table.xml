<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="create-table-orders" author="Kick704">
        <preConditions>
            <not>
                <tableExists tableName="orders" />
            </not>
        </preConditions>

        <createTable tableName="orders" remarks="Таблица заказов интернет-магазина">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="amount" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="delivery_address" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="receipt_code" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="timestamp with time zone" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modified" type="timestamp with time zone">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="orders"
                                 baseColumnNames="user_id"
                                 constraintName="FK_orders_users"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>